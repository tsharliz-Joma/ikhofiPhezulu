{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "https://ikhofiphezulu.web.app/"
          },
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains; preload"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src 'self'; script-src 'self' fonts.googleapis.com fonts.gstatic.com https://accounts.google.com/gsi/client  https://ikhofiphezulu.web.app/; style-src 'self' 'unsafe-inline'; frame-src 'self' https://accounts.google.com/; object-src 'none'"
          }
        ]
      }
    ]
  }
}
