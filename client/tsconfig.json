{
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@/components/*": ["src/components/*"]
    }
  },
  "include": ["src", "**/*.ts", "**/*.jsx", "**/*.tsx"],
  "exclude": ["node_modules"]
}
