{
  "compilerOptions": {
    "jsx": "react",
    "module": "CommonJS",
    "target": "ES5",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": ["src", "**/*.ts", "**/*.jsx", "**/*.tsx"],
  "exclude": ["node_modules"]
}
